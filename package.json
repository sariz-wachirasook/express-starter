{
  "author": "Sariz Wachirasook",
  "description": "Express Starter (Express + Prisma + MySQL project)",
  "license": "MIT",
  "name": "express-starter",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently --kill-others \"nodemon app.ts \" \"nodemon cron.ts --watch\"",
    "start": "concurrently --kill-others \"node app.ts\" \"node cron.ts\"",
    "generate": "node tools/generate.ts",
    "schema:generate": "prisma generate",
    "schema:update": "prisma generate && prisma db push",
    "husky:prepare": "husky install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "update:package": "ncu -u && pnpm install"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.2",
    "concurrently": "^7.6.0",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.2",
    "nodemon": "^2.0.20",
    "npm-check-updates": "^16.6.2",
    "pm2": "^5.2.2",
    "prisma": "^4.16.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@prisma/client": "^4.16.1",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "cron": "^2.1.0",
    "csv-writer": "^1.6.0",
    "express": "^4.18.2",
    "jsdom": "^20.0.3",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "multer": "1.4.5-lts.1",
    "nodemailer": "^6.8.0",
    "sharp": "^0.31.3",
    "slugify": "^1.6.5",
    "xlsx": "^0.18.5"
  }
}
